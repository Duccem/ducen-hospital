generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  DOCTOR
  PATIENT
  UNDEFINED
}

model User {
  id         String   @id @default(uuid())
  externalId String   @unique
  email      String?
  role       Role     @default(PATIENT)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
